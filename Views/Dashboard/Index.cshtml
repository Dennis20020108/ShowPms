@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <!-- 頁首 -->

    <!-- 第一列：統計卡片 -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="mt-2 text-muted">進行中專案</h6>
                    <h3 class="fw-bold text-dark">12</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="mt-2 text-muted">已完成專案</h6>
                    <h3 class="fw-bold text-dark">34</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="mt-2 text-muted">逾期專案</h6>
                    <h3 class="fw-bold text-dark">3</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- 第二列：圖表 -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light fw-bold">專案進度趨勢</div>
                <div class="card-body">
                    <canvas id="projectTrendChart" height="120"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light fw-bold">專案狀態分布</div>
                <div class="card-body">
                    <canvas id="statusPieChart" height="180"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- 第三列：最新活動 -->
    <div class="row g-4">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light fw-bold">最新活動</div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>王小明</strong> 更新了「彰秀院區 B棟 三樓醫師休息室裝修工程」進度
                        <div class="text-muted small">5 分鐘前</div>
                    </div>
                    <div class="mb-3">
                        「彰秀院區 A棟 六樓會議室裝修工程」報價單已核准
                        <div class="text-muted small">1 小時前</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 載入 Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // 折線圖：專案進度趨勢
    const ctx1 = document.getElementById('projectTrendChart');
    new Chart(ctx1, {
        type: 'line',
        data: {
            labels: ['1月', '2月', '3月', '4月', '5月', '6月'],
            datasets: [{
                label: '完成專案數',
                data: [5, 9, 7, 12, 10, 14],
                borderColor: '#28a745',
                fill: false,
                tension: 0.3
            }]
        },
        options: { responsive: true }
    });

    // 圓餅圖：專案狀態分布
    const ctx2 = document.getElementById('statusPieChart');
    new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: ['進行中', '已完成', '逾期'],
            datasets: [{
                data: [12, 34, 3],
                backgroundColor: ['#0d6efd', '#198754', '#dc3545']
            }]
        },
        options: { responsive: true }
    });
</script>
