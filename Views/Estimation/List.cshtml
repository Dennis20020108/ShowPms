@section scripts {
    <script>
        $(document).ready(function () {
            // 避免重複初始化
            if (!$.fn.DataTable.isDataTable('#estimateTable')) {

                $('#estimateTable').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json'
                    },
                    ordering: true,
                    paging: true,
                    searching: true,
                    columnDefs: [
                        { targets: '_all', className: 'dt-left text-start' } // 全部欄位強制靠左
                    ]
                });
            }
        });
    </script>
}

